@model carnetutelvt.Models.Cuaderno




@{
    ViewData["Title"] = "EDITAR HOJA";
}


<div class="hero">
    <center> <h1>EDITAR HOJA</h1></center>
    <div class="container">

        <form class="form" asp-action="Edit">
            <div class="row mb-2">
                <div class="col-sm-12 col-md-6 mb-3 mb-lg-0 col-lg-3">
                    <div class="form-group">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 mb-3 mb-lg-0 col-lg-3">
                    <div class="form-group">

                        <input asp-for="NameC" class="form-control" />
                        <span asp-validation-for="NameC" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 mb-3 mb-lg-0 col-lg-3">
                    <div class="form-group">

                        <input asp-for="Dateupdate" class="form-control"  placeholder="Clave nueva" />
                        <span asp-validation-for="Dateupdate" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <br />
    
                    <div class="form-group">

                        <textarea asp-for="InfoC" class=form-control estilotextarea2 cols="600" rows="20"></textarea>
                        <span asp-validation-for="InfoC" class="text-danger"></span>
                    </div>
            

             

                <div class="col-sm-12 col-md-6 mb-3 mb-lg-0 col-lg-3">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
        <a type="submit" class="btn btn-dark" asp-action="Index">Back</a>
    </div>
</div>
<div>
